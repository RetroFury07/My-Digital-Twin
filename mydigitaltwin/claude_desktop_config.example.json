{
  "mcpServers": {
    "digital-twin-production": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://your-project-name.vercel.app/api/mcp"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "digital-twin-local": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://localhost:3000/api/mcp"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
